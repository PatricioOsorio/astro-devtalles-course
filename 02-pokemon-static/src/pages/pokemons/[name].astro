---
import type { GetStaticPaths } from 'astro';

import { getPokemonList } from '@lib/services/pokemon.service';
import { queryClient } from '@lib/queryClient';
import { queryKeys } from '@lib/queryKeys';
import MainLayout from '@layouts/MainLayout.astro';
import PokemonCardPreview from '@components/pokemons/PokemonCardPreview.astro';
import Title from '@components/shared/Title.astro';

export const getStaticPaths = (async () => {
  const { results: pokemons } = await queryClient.fetchQuery({
    queryKey: queryKeys.pokemonList(),
    queryFn: () => getPokemonList(),
  });

  const initialPokemons = pokemons.map((pokemon) => ({
    params: {
      name: pokemon.name,
    },
    props: {
      name: pokemon.name,
      url: pokemon.url,
    },
  }));

  return initialPokemons;
}) satisfies GetStaticPaths;

const { name } = Astro.params;
const { url } = Astro.props;

const id = url.split('/').at(-2);
const audioSrc = `https://raw.githubusercontent.com/PokeAPI/cries/main/cries/pokemon/latest/${id}.ogg`;
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<MainLayout title={`Detail | ${name}`} descriptionOG=`Info of ${name}` imageOG={imageSrc}>
  <!-- <a href="/">Return</a> -->
  <button class="btn btn--outline self-start" onclick="history.back()">Return</button>

  <Title>{name}</Title>

  <PokemonCardPreview name={name} url={url} />

  <audio controls>
    <source src={audioSrc} type="audio/ogg" />
  </audio>
</MainLayout>
