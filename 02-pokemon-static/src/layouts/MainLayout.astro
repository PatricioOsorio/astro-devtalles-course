---
import { ClientRouter } from 'astro:transitions';

import '@styles/app.css';
import { siteInfo } from 'src/consts/site.info';
import Navbar from '@components/shared/Navbar.astro';

interface Props {
  title: string;
  imageOG?: string;
  descriptionOG?: string;
}

const { title = siteInfo.title, descriptionOG = siteInfo.description, imageOG } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <meta name="description" content={descriptionOG} />
    <meta name="author" content="Patricio Osorio" />

    <!-- OG Meta tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={descriptionOG} />
    <meta property="og:image" content={imageOG} />

    <title>{title}</title>
  </head>
  <body>
    <Navbar />

    <main class="page">
      <slot />
    </main>

    <ClientRouter />

    <script is:inline>
      const applyTheme = () => {
        const userPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const storedPreference = localStorage.getItem('theme');
        const isDark = storedPreference ? storedPreference === 'dark' : userPrefersDark;

        document.documentElement.classList.toggle('dark', isDark);

        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      };

      applyTheme();

      document.addEventListener('astro:after-swap', applyTheme);
    </script>
  </body>
</html>
