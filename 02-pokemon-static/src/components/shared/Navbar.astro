---
const links = [
  { href: '/', text: 'List' },
  { href: '/pokemons/1', text: 'Paginated' },
  { href: '/favorites', text: 'Favorites' },
];

const { pathname } = Astro.url;
---

<nav class="bg-white shadow dark:bg-gray-800">
  <div
    class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300"
  >
    <!-- {
      links.map(({ href, text }) => (
        <a
          href={href}
          class:list={[
            'hover:no-underline text-gray-800 dark:text-gray-200  mx-1.5 sm:mx-6',
            {
              'border-b-2 border-blue-500': pathname === href,
            },
          ]}
        >
          {text}
        </a>
      ))
    } -->
    {
      links.map(({ href, text }) => (
        <div>
          <a
            href={href}
            class="hover:no-underline text-gray-800 dark:text-gray-200  mx-1.5 sm:mx-6"
          >
            {text}
          </a>

          {pathname === href && (
            <div
              class="border-b-2 border-primary mx-4 shadow shadow-primary/20"
              transition:name="indicator"
            />
          )}
        </div>
      ))
    }
  </div>
</nav>
